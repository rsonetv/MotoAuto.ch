{
  "buildCommand": "pnpm build",
  "devCommand": "pnpm dev",
  "installCommand": "pnpm install --frozen-lockfile",
  "framework": "nextjs",
  "functions": {
    "app/api/**/*.ts": {
      "runtime": "nodejs@20.x"
    }
  },
  "env": {
    "PNPM_VERSION": "10"
  },
  "build": {
    "env": {
      "NODE_ENV": "production"
    }
  }
}